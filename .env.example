# PostgreSQL (auth-service / otros servicios relacionales)
POSTGRES_DB=your_db_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# MongoDB (fichas-service)
MONGO_DB_NAME=your_mongo_db
MONGO_ROOT_USERNAME=your_mongo_user
MONGO_ROOT_PASSWORD=your_mongo_password

# JWT
JWT_SECRET=replace_with_a_strong_secret_at_least_32_chars
JWT_EXPIRATION=3600s

# NATS
NATS_URL=nats://localhost:4222

# MinIO (files-service)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key
MINIO_BUCKET=famed-files
